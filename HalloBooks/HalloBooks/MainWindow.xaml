<Window x:Class="HalloBooks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HalloBooks"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <DockPanel>
        <WrapPanel DockPanel.Dock="Top" Margin="6">
            <Label>Suche:</Label>
            <TextBox Name="tb1" Width="80" Text=".NET"/>
            <Button Click="Suche">Suche</Button>
            <Button Click="LinqQuery">Nur weniger als 500 Seiten</Button>
            <Button Click="LinqLambda">Nur weniger als 500 Seiten LAMBDA</Button>
            <Button Click="ExportXML">Export XML</Button>
            <Button Click="ImportXML">Import XML</Button>
        </WrapPanel>
        <DataGrid Name="grid"/>
    </DockPanel>
</Window>
